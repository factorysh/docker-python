FROM bearstech/debian-dev:stretch

ENV LANG=C.UTF-8
ENV PIP_CACHE_DIR=/.cache/pip

RUN set -eux \
    &&  mkdir -p /.cache/pip \
    &&  apt-get update \
    &&  apt-get install -y --no-install-recommends \
                    pypy-dev \
                    pypy-setuptools \
    &&  apt-get clean \
    &&  rm -rf /var/lib/apt/lists/* \
    &&  update-alternatives --install /usr/bin/python python /usr/bin/pypy 1 \
    &&  easy_install-pypy pip virtualenv wheel

# generated labels

ARG GIT_VERSION
ARG GIT_DATE
ARG BUILD_DATE

LABEL \
    com.bearstech.image.revision_date=${GIT_DATE} \
    org.opencontainers.image.authors=Bearstech \
    org.opencontainers.image.revision=${GIT_VERSION} \
    org.opencontainers.image.created=${BUILD_DATE} \
    org.opencontainers.image.url=https://github.com/factorysh/docker-python \
    org.opencontainers.image.source=https://github.com/factorysh/docker-python/blob/${GIT_VERSION}/Dockerfile.pypy-dev
