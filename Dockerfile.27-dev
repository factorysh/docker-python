FROM bearstech/python:2.7

ENV PIP_CACHE_DIR=/.cache/pip

RUN set -eux \
    &&  mkdir -p /.cache/pip \
    &&  apt-get update \
    &&  apt-get install -y --no-install-recommends \
                  build-essential \
                  git \
                  mercurial \
                  python2.7-dev \
                  python-pip \
                  python-wheel \
    &&  apt-get clean \
    &&  rm -rf /var/lib/apt/lists/* \
    &&  pip install virtualenv
